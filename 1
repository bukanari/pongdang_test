<script>
    // 떨어질 높이 (바닥 높이)
    const groundLevel = 1000; // 이 값은 SVG 크기에 맞게 조정

    // 모든 벡터를 찾아 배열로 저장
    const vectors = document.querySelectorAll('.falling');

    // 마우스가 움직일 때 발생하는 이벤트
    document.addEventListener('mousemove', (e) => {
        const mouseX = e.clientX; // 마우스 X축 위치
        const windowWidth = window.innerWidth; // 윈도우 너비

        vectors.forEach((vector, index) => {
            const vectorX = vector.getBoundingClientRect().left + vector.getBoundingClientRect().width / 2; // 백터의 중심 X좌표
            const distance = Math.abs(mouseX - vectorX); // 마우스와 백터 사이의 거리

            if (distance < 200) { // 마우스가 가까워지면 떨어짐
                vector.style.transform = `translateY(${groundLevel}px)`;
            } else { // 멀어지면 다시 원위치로 복귀
                vector.style.transform = 'translateY(0)';
            }
        });
    });
</script>

